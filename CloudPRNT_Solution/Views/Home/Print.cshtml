@model CloudPRNT_Solution.Models.PrintQueue

@{
    ViewData["Title"] = "Print Page";
}

<form asp-controller="GenerateReceipt" asp-action="Print">
    <p>
        <input type="submit" value="Print" />
    </p>
</form>
<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="PrinterMac" class="control-label"></label>
        <input asp-for="PrinterMac" class="form-control" />
        <span asp-validation-for="PrinterMac" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="OrderContent" class="control-label"></label>
        <input asp-for="OrderContent" class="form-control" />
        <span asp-validation-for="OrderContent" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="OrderDate" class="control-label"></label>
        <input asp-for="OrderDate" class="form-control" />
        <span asp-validation-for="OrderDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="OrderName" class="control-label"></label>
        <input asp-for="OrderName" class="form-control" />
        <span asp-validation-for="OrderName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>
