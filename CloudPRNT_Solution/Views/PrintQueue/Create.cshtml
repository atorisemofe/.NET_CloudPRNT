@model CloudPRNT_Solution.Models.PrintQueue

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>PrintQueue</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="PrinterMac" class="control-label"></label>
                <input asp-for="PrinterMac" class="form-control" />
                <span asp-validation-for="PrinterMac" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrderName" class="control-label"></label>
                <input asp-for="OrderName" class="form-control" />
                <span asp-validation-for="OrderName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OpenDrawer" class="control-label"></label>
                <input asp-for="OpenDrawer" class="form-control" placeholder="Enter Yes or No"/>
                <span asp-validation-for="OpenDrawer" class="text-danger"></span>
            </div>
            <div><p></p></div>
            <div class="form-group">
                <label asp-for="OrderDate" class="control-label"></label>
                <input asp-for="OrderDate" type="datetime" value="@DateTime.Now"/>
                <span asp-validation-for="OrderDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h3></h3>
                <input type="submit" value="Print" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
